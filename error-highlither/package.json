{
  "name": "error-highlighter",
  "displayName": "Error Highlighter Pro",
  "description": "Enhanced error highlighting with context - highlights errors, warnings, and their surrounding lines for better visibility",
  "version": "1.0.0",
  "publisher": "vscode-extensions",
  "author": {
    "name": "Jihad",
    "url": "https://github.com/jihadXYZ"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jihadXYZ/error-highlighter-pro"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "icon": "icon.png",
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "error",
    "warning",
    "highlight",
    "diagnostic",
    "linting"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "error-highlighter.refresh",
        "title": "Refresh Error Highlighting",
        "category": "Error Highlighter"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
